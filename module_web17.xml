<?xml version="1.0" encoding="UTF-8"?>
<project name="module_web17" default="compile.module.web17">
  <dirname property="module.web17.basedir" file="${ant.file.module_web17}"/>
  
  <property name="module.jdk.home.web17" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.web17" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.web17" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.web17" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="web17.output.dir" value="${module.web17.basedir}/out/production/web17"/>
  <property name="web17.testoutput.dir" value="${module.web17.basedir}/out/test/web17"/>
  
  <path id="web17.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="web17.module.production.classpath"/>
  
  <path id="web17.runtime.production.module.classpath">
    <pathelement location="${web17.output.dir}"/>
  </path>
  
  <path id="web17.module.classpath">
    <pathelement location="${web17.output.dir}"/>
  </path>
  
  <path id="web17.runtime.module.classpath">
    <pathelement location="${web17.testoutput.dir}"/>
    <pathelement location="${web17.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.web17">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.web17">
    <patternset refid="excluded.from.module.web17"/>
  </patternset>
  
  
  <target name="compile.module.web17" depends="compile.module.web17.production,compile.module.web17.tests" description="Compile module web17"/>
  
  <target name="compile.module.web17.production" depends="register.custom.compilers" description="Compile module web17; production classes"/>
  
  <target name="compile.module.web17.tests" depends="register.custom.compilers,compile.module.web17.production" description="compile module web17; test classes" unless="skip.tests"/>
  
  <target name="clean.module.web17" description="cleanup module">
    <delete dir="${web17.output.dir}"/>
    <delete dir="${web17.testoutput.dir}"/>
  </target>
</project>